<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
            app:cardCornerRadius="12dp"
            android:layout_width="0dp"
            android:layout_height="300dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/cardView2"
            android:elevation="5dp"
            app:cardElevation="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="6dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
            android:outlineAmbientShadowColor="#00472525" android:maxHeight="106dp">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        android:background="@drawable/gradient">
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
                    android:id="@+id/imageButton2" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="#00FFFFFF" android:onClick="btnCloseClicked"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
            <Button
                    android:id="@+id/fab"
                    android:text="Call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    app:srcCompat="@drawable/ic_add"
                    android:background="@drawable/card_rounded_name"
                    app:backgroundTint="#0B99DF"
                    android:textColor="@android:color/white" android:textSize="15sp" android:textAllCaps="false"
                    android:drawableLeft="@drawable/ic_call"
                    android:paddingStart="5dp" android:paddingEnd="5dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                    android:text="Call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtTitleCallNotification"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="0.501" android:textSize="18dp"
                    android:textColor="@android:color/black" android:textStyle="bold" android:fontFamily="monospace"
                    android:textAlignment="center" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageButton2"/>
            <TextView
                    android:text="Call to SomeOne Scheduled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtDetailCallNotification"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/txtTitleCallNotification"
                    android:textSize="14dp" android:textColor="@android:color/black" android:textAlignment="center"/>
            <TextView
                    android:text="@string/DateAndTimeDialogView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtTimeAndDateCallNotification"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="0.502" android:textSize="14dp"
                    android:textColor="@android:color/black" android:layout_marginTop="28dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtDetailCallNotification"
                    android:textAlignment="center"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>