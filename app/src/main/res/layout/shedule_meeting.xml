<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controller.CreateItemActivity"
        android:id="@+id/constraint">
    <View
            android:layout_width="0dp"
            android:layout_height="194dp"
            android:id="@+id/view3" android:background="#EE081B7A" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="Remember me before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:textColor="@android:color/black" android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/txtDateSetMeeting" android:layout_marginTop="56dp"
            android:layout_marginStart="12dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="176dp"
            android:layout_height="55dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@drawable/ic_send"
            app:backgroundTint="#3CA4B9" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="btnMeetingSaveClicked"/>

    <ImageView
            android:layout_width="18dp"
            android:layout_height="20dp" app:srcCompat="@android:drawable/ic_lock_idle_alarm"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/txtDateSetMeeting"
            app:layout_constraintTop_toTopOf="@+id/textView10"
            app:layout_constraintBottom_toBottomOf="@+id/textView10"/>
    <TextView
            android:text="@"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textColor="#028CCF"
            app:layout_constraintTop_toTopOf="@+id/txtDateSetMeeting" app:layout_constraintBottom_toBottomOf="@+id/txtDateSetMeeting"
            app:layout_constraintStart_toEndOf="@+id/txtDateSetMeeting" android:layout_marginStart="4dp"
            app:layout_constraintVertical_bias="0.0" android:textSize="15sp"/>
    <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtDateSetMeeting"
            app:layout_constraintStart_toStartOf="@+id/textView8" android:textColor="@android:color/black"
            android:text="10 Sep, 2019"
            android:textSize="15sp"
            android:onClick="setDateClicke" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8"/>
    <TextView
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="10:00 AM"
            android:ems="10"
            android:id="@+id/txtTimeSetMeeting"
            app:layout_constraintTop_toTopOf="@+id/textView3" app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.0" android:textColor="@android:color/black"
            android:textSize="15sp" android:onClick="setTimeClicked"
            android:layout_marginLeft="9dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
            android:id="@+id/imageButton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:background="#00FFFFFF" android:onClick="btnCloseClicked"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtInMeeting"
            android:hint="In (Place)"
            app:layout_constraintStart_toStartOf="@+id/txtWithMeeting"
            app:layout_constraintEnd_toEndOf="@+id/txtWithMeeting"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtWithMeeting"
    />
    <TextView
            android:text="Schedule Meeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:textColor="@android:color/white"
            android:textSize="24sp" android:layout_marginTop="56dp" app:layout_constraintTop_toTopOf="@+id/view3"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintStart_toEndOf="@+id/imageButton"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtWithMeeting" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/view3" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="with"/>
    <TextView
            android:text="on:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/txtInMeeting" app:layout_constraintStart_toStartOf="@+id/txtInMeeting"
            android:textSize="16sp" android:textColor="@android:color/black"/>
    <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtMinBeforeMeeting"
            app:layout_constraintStart_toEndOf="@+id/textView10" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView10"
            app:layout_constraintBottom_toBottomOf="@+id/textView10" android:textSize="12sp"
            android:hint="(minute(s))" android:textColorHint="@android:color/black"/>
</androidx.constraintlayout.widget.ConstraintLayout>