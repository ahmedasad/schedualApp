<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controller.ShowDataFromNotification">
    <androidx.cardview.widget.CardView
            app:cardCornerRadius="12dp"
            android:layout_width="0dp"
            android:layout_height="300dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/cardView2"
            android:elevation="5dp"
            app:cardElevation="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="6dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
            android:outlineAmbientShadowColor="#00472525" android:maxHeight="106dp">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient">
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
                    android:id="@+id/imageButton2" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="#00FFFFFF" android:onClick="btnCloseClicked"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                    android:text="Travel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtTitleTravelNotification"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="0.501" android:textSize="18dp"
                    android:textColor="@android:color/black" android:textStyle="bold" android:fontFamily="monospace"
                    android:textAlignment="center" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageButton2"/>
            <TextView
                    android:text="You Schedule your journey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtDetailTravelNotification"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    android:layout_marginTop="36dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtTitleTravelNotification"
                    android:textSize="14dp" android:textColor="@android:color/black" android:textAlignment="center"/>
            <TextView
                    android:text="@string/DateAndTimeDialogView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtTimeAndDateTravelNotification"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="0.502" android:textSize="14dp"
                    android:textColor="@android:color/black"
                    android:textAlignment="center" android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtToTravelNotification"/>
            <TextView
                    android:text="Hyderabad "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtFromTravelNotification"
                    android:textColor="@android:color/black" android:textSize="16dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtDetailTravelNotification"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                    android:text="to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView14"
                    android:textColor="@android:color/black" android:textSize="14dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtFromTravelNotification" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.501"/>
            <TextView
                    android:text="Karachi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtToTravelNotification"
                    android:textColor="@android:color/black" android:textSize="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView14" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>